<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87CEEB"
    android:weightSum="1">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="CA"
                android:id="@+id/mapa1_s1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="-60dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="_"
                android:id="@+id/textView6"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="-20dp"
                android:layout_marginTop="-40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="SA"
                android:id="@+id/mapa1_s2"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="-60dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="_"
                android:id="@+id/textView7"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="-20dp"
                android:layout_marginTop="-40dp" />
        </LinearLayout>

    </FrameLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right|center_vertical">

        <ImageView
            android:layout_width="82dp"
            android:layout_height="62dp"
            android:id="@+id/nivel_1_ilha_a"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="100dp"
            android:layout_marginBottom="80dp"
            android:background="@drawable/ilha2"
            android:layout_marginTop="5dp"
            android:tag="2"/>

        <ImageView
            android:layout_width="82dp"
            android:layout_height="62dp"
            android:id="@+id/nivel_1_ilha_b"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="-45dp"
            android:layout_marginBottom="80dp"
            android:background="@drawable/ilha2"
            android:layout_marginTop="85dp"
            android:tag="2"/>

        <ImageView
            android:layout_width="82dp"
            android:layout_height="66dp"
            android:id="@+id/nivel_1_ilha_c"
            android:layout_marginLeft="120dp"
            android:background="@drawable/ilha_tesouro"
            android:layout_marginTop="40dp"
            android:tag="3" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewA"
        android:text="CA"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewB"
        android:text="BU"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="130dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewC"
        android:text="SA"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="70dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cj_navio"
        android:background="@drawable/navio"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:tag="0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Para ganhar o jogo, você deve levar o navio até"
        android:id="@+id/como1_textView"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="a ilha do tesouro!!!"
        android:id="@+id/como2_textView"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="20dp" />

    <ImageView
        android:layout_width="157dp"
        android:layout_height="116dp"
        android:id="@+id/cj1_c"
        android:layout_gravity="center_vertical"
        android:background="@drawable/circulo"
        android:tag="2"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="-40dp" />

</FrameLayout>


